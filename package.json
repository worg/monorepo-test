{
  "name": "gh-issues-monorepo",
  "version": "0.1.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:all": "npm run --workspaces lint:fix",
    "build": "parcel build packages/*",
    "dev:issue-viewer": "parcel -p 1234 packages/issue-viewer",
    "dev:user-stats": "parcel -p 1235 packages/user-stats",
    "dev": "npm run dev:issue-viewer & npm run dev:user-stats",
    "prepare": "husky install"
  },
  "author": "Hiram Perez <hi@worg.xyz>",
  "license": "UNLICENSED",
  "workspaces": [
    "packages/issue-viewer",
    "packages/user-stats"
  ],
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "parcel": "^2.0.1",
    "prettier": "^2.5.1"
  },
  "lint-staged": {
    ".{ts,tsx,json}": [
      "eslint",
      "prettier -w",
      "git add"
    ]
  }
}
